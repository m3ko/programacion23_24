package Arrai;

import java.util.Scanner;
public class once11 {

	public static void main(String[] args) {
// Definir y rellenar un array de 10 (por programación). Pedir una cadena y en la pantalla tiene que aparecer
		//los nombres que contengan la cadena. Es decir, realizar una especie de búsqueda.


		Scanner scan = new Scanner(System.in);
		String[] nombres = {"Ana García", "Roberto Mendoza", "Laura Ramírez", "Juan Torres", "María Vargas", "Luis Sánchez", "Gabriela López", "Carlos Martínez", "Paula Rodríguez", "Javier Jiménez", "Valeria Ruiz", "Andrés Castro", "Natalia Herrera", "Sergio González", "Carmen Medina", "Diego Ortega", "Sofía Flores", "Miguel Silva", "Adriana Pérez", "Alejandro Ramos"};
		String nombreIndicado = "";
		
		System.out.print("Indica un nombre para saber sí está en la lista.");
		nombreIndicado = scan.next();
		
		for(int i = 0; i < 20; i++) {
			
			if(nombreIndicado==nombres[i]) {
				
				System.out.print(nombreIndicado+" si está en la lista");
				}
			
				
			}
			
		}
		
	}


